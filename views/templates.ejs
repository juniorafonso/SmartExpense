<h1 class="mb-4">ðŸ“„ <%= lang.templates || 'Templates' %></h1>
<div class="bg-white border rounded p-3 mb-4">
<table class="table ">
  <thead>
    <tr>
      <th style="width: 70%;"><%= lang.name %></th>
      <th style="width: 20%;" class="text-center"><%= lang.expenses || 'Expenses' %></th>
      <th style="width: 10%;" class="text-center"></th>
    </tr>
  </thead>
  <tbody>
    <% templates.forEach(template => { %>
      <tr>
        <td><%= template.nome %></td>
        <td class="text-center"><%= template.despesasCount %></td>
        <td class="text-center">
          <div class="dropdown">
            <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
              <%= lang.actions || 'Actions' %>
            </button>
            <ul class="dropdown-menu">
              <li>
                <a class="dropdown-item" href="/templates/<%= template.id %>">
                  <%= lang.edit || 'Edit' %>
                </a>
              </li>
              <li>
                <form action="/templates/<%= template.id %>/delete" method="POST" style="display:inline;">
                  <button type="submit" class="dropdown-item text-danger">
                    <%= lang.delete || 'Delete' %>
                  </button>
                </form>
              </li>
            </ul>
          </div>
        </td>
      </tr>
    <% }); %>
  </tbody>
</table>
</div>