<h1 class="mb-4"><%= lang.create_template %></h1>

<form action="/templates" method="POST" class="bg-white border rounded p-4" style="width: 100%;">
  <div class="mb-3">
    <label for="nome" class="form-label"><%= lang.template_name || 'Template Name' %></label>
    <input type="text" class="form-control" id="nome" name="nome" placeholder="<%= lang.enter_template_name || 'Enter template name' %>" required>
  </div>

  <div class="d-flex justify-content-between">
    <button type="submit" class="btn btn-primary"><%= lang.create %></button>
  </div>
</form>
