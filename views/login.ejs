<div class="container">
  <style>
    body {
      background-color: #f8f9fa;
    }
    .card {
      margin-top: 50px;
      border: none;
      box-shadow: 0 0.25rem 0.5rem rgba(0, 0, 0, 0.05);
    }
    .card-title {
      font-weight: bold;
      color: #343a40;
    }
    .form-label {
      color: #495057;
    }
    .btn-primary {
      background-color: #007bff;
      border-color: #007bff;
    }
    .btn-primary:hover {
      background-color: #0069d9;
      border-color: #0062cc;
    }
  </style>
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h1 class="card-title text-center mb-4"><%= lang.app_name %> - <%= lang.login_title %></h1>
          <form action="/login" method="POST">
            <div class="mb-3">
              <label for="usuario" class="form-label"><%= lang.username %></label>
              <input type="text" class="form-control" id="usuario" name="usuario" required>
            </div>
            <div class="mb-3">
              <label for="senha" class="form-label"><%= lang.password %></label>
              <input type="password" class="form-control" id="senha" name="senha" required>
            </div>
            <div class="mb-3">
              <label for="language" class="form-label"><%= lang.select_language %></label>
              <select class="form-select" id="language" name="language">
                <option value="pt">Português</option>
                <option value="en">English</option>
                <option value="fr">Français</option>
              </select>
            </div>
            <% if (error) { %>
              <div class="alert alert-danger" role="alert">
                <%= lang.error_login %>
              </div>
            <% } %>
            <div class="d-grid">
              <button type="submit" class="btn btn-primary"><%= lang.login %></button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>