<h1 class="mb-4"><%= lang.create_project %></h1>

<form action="/criar-projeto" method="POST" class="bg-white border rounded p-4" style="width: 100%;">
  <div class="mb-3">
    <label for="nome" class="form-label"><%= lang.project_name %></label>
    <input type="text" class="form-control" id="nome" name="nome" placeholder="<%= lang.enter_project_name %>" required>
  </div>

  <div class="mb-3">
    <label for="template" class="form-label"><%= lang.template %></label>
    <select class="form-select" id="template" name="template">
      <option value="" selected><%= lang.select_template %></option>
      <% templates.forEach(template => { %>
        <option value="<%= template.id %>"><%= template.nome %></option>
      <% }) %>
    </select>
  </div>

  <div class="d-flex justify-content-between">
    <button type="submit" class="btn btn-primary"><%= lang.create %></button>
  </div>
</form>
