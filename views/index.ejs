<!-- Welcome Message -->
<h1 class="mb-4"><%= lang.welcome_message || `Welcome, ${user.username || 'User'}!` %></h1>

<!-- Dashboard Row -->
<div class="row mb-4">
  <!-- Left Column -->
  <div class="col-md-6">
    <h2><%= lang.dashboard || 'Dashboard' %></h2>
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><%= lang.recent_projects || 'Recent Projects' %></h5>
        <p class="card-text">
          <!-- Placeholder: You can list recent projects here -->
          <%= lang.feature_under_development || 'Feature under development.' %>
        </p>
        <!-- Optional: Link to all projects -->
        <a href="/projects" class="btn btn-sm btn-outline-primary"><%= lang.view_all_projects || 'View All Projects' %></a>
      </div>
    </div>
  </div>

  <!-- Right Column -->
  <div class="col-md-6">
    <h2><%= lang.quick_actions || 'Quick Actions' %></h2>
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><%= lang.common_tasks || 'Common Tasks' %></h5>
        <p class="card-text">
          <!-- Placeholder: Add links to common actions -->
           <%= lang.feature_under_development || 'Feature under development.' %>
        </p>
         <!-- Example Quick Action Links -->
         <a href="/projects/create" class="btn btn-sm btn-success me-2"><%= lang.create_project || 'Create Project' %></a>
         <a href="/templates/create" class="btn btn-sm btn-info"><%= lang.create_template || 'Create Template' %></a>
      </div>
    </div>
  </div>
</div>

<!-- Project Status Links (Example) -->
<div class="mb-4">
  <span class="me-3"><%= lang.view_projects_by_status || 'View Projects by Status:' %></span>
  <a href="/projects/create" class="btn btn-success me-2"><%= lang.create_project || 'Create Project' %></a>
  <!-- Link to view all (or default 'in progress') projects -->
  <a href="/projects" class="btn btn-primary me-2"><%= lang.in_progress || 'In Progress' %></a>
  <!-- Link to view finished projects (using query parameter example) -->
  <a href="/projects?status=finished" class="btn btn-info"><%= lang.finished || 'Finished' %></a>
</div>
